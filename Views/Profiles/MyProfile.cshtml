<div class="content">
    @using (Html.BeginForm("Edit", "Profiles", FormMethod.Post, new { enctype = "multipart/form-data" }
    ))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.Id)
        <div class="row">
            <div class="col-sm-7 col-6">
                <h4 class="page-title">My Profile</h4>
            </div>

            <div class="col-sm-5 col-6 text-right m-b-30">
                @*<a href="@Url.Action("EditProfile", "Profiles", new { id = @ViewBag.user.Id })" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Edit Profile</a>*@
            </div>
        </div>
        <div class="card-box profile-header">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                @if (String.IsNullOrEmpty(ViewBag.user.Avatar))
                                {
                                    <img id="avt" alt="" src="~/Content/img/user.jpg">

                                }
                                else
                                {
                                    <img id="avt" alt="" src="~/Content/img/uploads/@ViewBag.user.Avatar">

                                }

                                @*<a href="#"><img class="avatar" src="assets/img/doctor-03.jpg" alt=""></a>*@
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h3 class="user-name m-t-0 mb-0">@ViewBag.user.UserName</h3>
                                        @*<small class="text-muted">Gynecologist</small>*@
                                    <div class="staff-id">Profile ID : @ViewBag.user.Id</div>
                                        <div class="staff-msg"><a href="chat.html" class="btn btn-primary">Send Message</a></div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <span class="title">Phone:</span>
                                            <span class="text"><a href="#">@ViewBag.user.Phone</a></span>
                                        </li>
                                        <li>
                                            <span class="title">Email:</span>
                                            <span class="text"><a href="#">@ViewBag.user.Email</a></span>
                                        </li>
                                        <li>
                                            <span class="title">Birthday:</span>
                                            <span class="text">@ViewBag.user.DateOfBirth</span>
                                        </li>
                                        <li>
                                            <span class="title">Address:</span>
                                            <span class="text">@ViewBag.user.Address</span>
                                        </li>
                                        <li>
                                            <span class="title">Gender:</span>
                                            <span class="text">@ViewBag.user.Gender</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        } 
</div>


