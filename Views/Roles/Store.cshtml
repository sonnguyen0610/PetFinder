@model PetFinderAPI.Models.Role
@{ ViewBag.Title = "Roles"; }

@section css {
    <link rel="stylesheet" type="text/css" href="~/Content/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css//bootstrap-datetimepicker.min.css">

}

<div class="content">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">Add Role</h4>
            @if (ViewBag.message != "")
            {
                <span class="badge badge-danger">@ViewBag.message</span>}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            @*<form>*@
            @using (Html.BeginForm("Store", "Roles", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Role Name <span class="text-danger">*</span></label>
                    @*<input class="form-control" type="text">*@
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Description <span class="text-danger">*</span></label>
                    @*<input class="form-control" type="text">*@
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })

                </div>

                <div class="col-sm-6">
                    <div class="form-group gender-select">
                        <label class="gen-label">IsActive:</label>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @*<input type="radio" name="gender" class="form-check-input" checked="">Male*@
                                @Html.RadioButtonFor(m => m.IsActive, "True", new { Checked = "checked" }) True
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @*<input type="radio" name="gender" class="form-check-input">Female*@
                                @Html.RadioButtonFor(m => m.IsActive, "False")  False
                            </label>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn btn-primary submit-btn">Create Role</button>
                </div> @*</form>*@}
        </div>
    </div>
</div>

