@{
    var user = Session["user"] as PetFinderAPI.Models.User;
    if (user == null)
    {
        Response.Redirect("~/admin/Auth/Login");
    }
    else
    {

        <body>
            <div class="main-wrapper">
                <div class="header">
                    <div class="header-left">
                        <a href="index-2.html" class="logo">
                            <img src="~/Content/img/logo.png" width="70" height="70" alt=""> <span>MeoWoof</span>
                        </a>
