            @Scripts.Render("~/bundles/popper")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/slimscroll")
            @RenderSection("scripts", required: false)

            @Scripts.Render("~/bundles/app")

        </body>
    }
