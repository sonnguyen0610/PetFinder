<div class="content">

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            @*<form>*@
            @using (Html.BeginForm("Store", "Posts", FormMethod.Post))
            {

                <div class="form-group">
                    <label>Pet<span class="text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.PetId, new SelectList(ViewBag.ABC, "Value", "Text"), "-Please select-", new { @class = "form-control" })
                </div>



                <div class="form-group">
                    <label>Post Categories<span class="text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.PostCategoryId, new SelectList(ViewBag.hhh, "Value", "Text"), "-Please select-", new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label>Content</label>
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
                </div>



                <div class="form-group gender-select">
                    <label class="gen-label">IsActive:</label>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            @*<input type="radio" name="gender" class="form-check-input" checked="">Male*@
                            @Html.RadioButtonFor(m => m.IsActive, "True", new { Checked = "checked" }) True
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            @*<input type="radio" name="gender" class="form-check-input">Female*@
                            @Html.RadioButtonFor(m => m.IsActive, "False")  False
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label>Images</label>
                    <div>
                        <input name="Images" id="Images" class="form-control" type="file">
                        <small class="form-text text-muted">Max. file size: 50 MB. Allowed images: jpg, gif, png. Maximum 10 images only.</small>

                    </div>


                    @*<div class="editor-label">
                            <label name="hinhanh" id="img"></label>
                        </div>*@
                </div>
                <div class="row" id="list-img">

                </div>

                <div class="m-t-20 text-center">
                    <button class="btn btn-primary submit-btn">Add Post</button>
                </div>
                @*</form>*@}
        </div>
    </div>
</div>
