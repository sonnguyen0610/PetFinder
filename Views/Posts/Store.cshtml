    <script>$(document).ready(function () {

            $('#Images').click(function () {
                var ckfinder = new CKFinder();
                ckfinder.selectActionFunction = function (Images) {
                    $('#list-img').append(
                        '<div class="col-md-3 col-sm-3 col-4 col-lg-3 col-xl-2"> <div class= "product-thumbnail"> <img src=' + Images + ' class="img-thumbnail img-fluid" alt=""><span class= "product-remove" title = "remove"> <i onClick="(() => {$(event.target).parents().get(2).remove();})()" class="fa fa-close"> <input type="hidden" name="images" value="' + Images + '"> </i></span ></div ></div > '
                    );
                };
                ckfinder.popup();
            });
        })
            ;</script>

    <script>$(document).ready(function () {
            CKEDITOR.replace("Content", { customConfig: "~/Content/ckeditor/config.js" });

        })
            ;</script>
