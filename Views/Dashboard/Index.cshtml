@{
    ViewBag.Title = "Dashboard";
}

<div class="content">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="dash-widget">
                <span class="dash-widget-bg1"><i class="fa fa-user" aria-hidden="true"></i></span>
                <div class="dash-widget-info text-right">
                    <h3>@ViewBag.TotalUsers</h3>
                    <span class="widget-title1">Users <i class="fa fa-check" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="dash-widget">
                <span class="dash-widget-bg2"><i class="fa fa-paw"></i></span>
                <div class="dash-widget-info text-right">
                    <h3>@ViewBag.TotalPets</h3>
                    <span class="widget-title2">Pets <i class="fa fa-check" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
            <div class="dash-widget">
                <span class="dash-widget-bg3"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                <div class="dash-widget-info text-right">
                    <h3>@ViewBag.TotalPosts</h3>
                    <span class="widget-title3">Posts <i class="fa fa-check" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-md-6 col-lg-8 col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title d-inline-block">Posts</h4> <a href="@Url.Action("Index", "Posts")" class="btn btn-primary float-right">View all</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="d-none">
                                <tr>
                                    <th>Pet</th>
                                    <th>Post Category</th>
                                    <th>Timing</th>
                                    <th class="text-right">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Posts)

                                {
                                    <tr>

                                        <td style="min-width: 200px;">
                                            <h2><a>@item.Pet.Name<span>@item.Pet.PetCategory.Name</span></a></h2>
                                        </td>
                                        <td>
                                            <h5 class="time-title p-0">PostCategory</h5>
                                            <p>@item.PostCategory.Name</p>
                                        </td>
                                        <td>
                                            <h5 class="time-title p-0">Timing</h5>
                                            <p>@item.CreatedAt</p>
                                        </td>
                                        <td class="text-right">
                                            <a href="appointments.html" class="btn btn-outline-primary take-btn">Take up</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 col-xl-4">
            <div class="card member-panel">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">Pets</h4>
                </div>
                <div class="card-body">
                    <ul class="contact-list">
                        @foreach (var item in ViewBag.Pets)

                        {
                            <li>
                                <div class="contact-cont">
                                    <div class="float-left user-img m-r-10">
                                        <a href="profile.html" title="John Doe"><img src="~Content/img/uploads/@item.Avatar" alt="" class="w-40 rounded-circle"><span class="status online"></span></a>
                                    </div>
                                    <div class="contact-info">
                                        <span class="contact-name text-ellipsis">@item.Name</span>
                                        <span class="contact-date">@item.PetCategory.Name</span>
                                    </div>
                                </div>
                            </li>
                        }


                    </ul>
                </div>
                <div class="card-footer text-center bg-white">
                    <a href="@Url.Action("Index", "Pets")" class="text-muted">View all Pets</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-8 col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title d-inline-block">New Users </h4> <a href="@Url.Action("Index", "Users")" class="btn btn-primary float-right">View all</a>
                </div>
                <div class="card-block">
                    <div class="table-responsive">
                        <table class="table mb-0 new-patient-table">
                            <tbody>
                                @foreach (var item in ViewBag.Users)
                                {

                                    <tr>
                                        <td>
                                            <img width="28" height="28" class="rounded-circle" src="~Content/img/uploads/@item.Avatar" alt="">
                                            <h2>@item.UserName</h2>
                                        </td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td><button class="btn btn-primary btn-primary-one float-right">Fever</button></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
